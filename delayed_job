#!/bin/bash --login

source $HOME/bin/env.sh

#start a delayed job with
#delayed_job <start|stop> queue worker-number
#designed to work well with monit

ACTION=$1
QUEUE=$2
WORKER_NUM=$3
PID_DIR=$DLS_HOME/tmp/pids/delayed_job/$QUEUE

mkdir -p $PID_DIR

ionice -c2 -n5 -p $$
renice +4 -p $$

#for rvm
cd $DLS_HOME

./bin/delayed_job -i $WORKER_NUM --queue=$QUEUE --pid-dir=$PID_DIR $ACTION

